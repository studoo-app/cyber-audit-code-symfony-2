{% extends 'base.html.twig' %}

{% block title %}Liste des tags{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            {% for label, messages in app.flashes(['success']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        <p>{{ message }}</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">

        <div class="col">
            <div class="card h-100 bg-light" id="add-tag-card">

                <div class="card-body d-flex align-items-center justify-content-center">
                    <a class="stretched-link text-center text-secondary" href="{{ path('app_tag_new') }}">
                        <i class="bi-plus-circle fs-1"></i>
                    </a>
                </div>
            </div>
        </div>


        {% for index,tag in tags %}
            <div class="col">
                <div class="card bg-light h-100" id="entry-card-{{ index }}">
                    <div class="card-body d-flex align-items-center justify-content-center ">
                        <div class="text-center">
                            <h5 class="card-title" id="entry-name-{{ index }}">{{ tag.label }}</h5>
                        </div>
                        <a class="stretched-link" href="{{ path('app_tag_show', {'id': tag.id}) }}"></a>

                    </div>
                </div>
            </div>
        {% endfor %}


    </div>

{% endblock %}
